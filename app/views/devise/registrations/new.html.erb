<div class="columns">
  <section class="column-single">

    <h2 class="column--heading" id="contact-us">Sign in</h2>
    <p>TKTK Some text about signing up.</p>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>

      <div class="row">
        <%= f.label :email, :class => 'field--label' %><%= f.email_field :email %>
      </div>

      <div class="row">
        <%= f.label :password, :class => 'field--label' %><%= f.password_field :password %>
      </div>

      <div class="row">
        <%= f.label :password_confirmation, :class => 'field--label' %><%= f.password_field :password_confirmation %></div>
      <div>

      <div class="row">
        <%= f.submit "Sign up" %>
      </div>

    <% end %>

    <p>
      <%= render :partial => "devise/shared/links" %>
    </p>

  </section>
</div>

